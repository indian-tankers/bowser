{
  "name": "tally-bridge",
  "version": "1.9.0",
  "description": "A bridge between Local data (tally, mongodb) and your web app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "sync": "node ./cli/syncRunner.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Taha Kazmi",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "axios": "^1.8.4",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "mongodb": "3.6",
    "mongoose": "^8.13.2",
    "update-electron-app": "^3.1.1",
    "xml2js": "^0.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfgraphics/bowser.git"
  },
  "devDependencies": {
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.itplfirebase.tallybridge",
    "productName": "Tally Bridge",
    "publish": [
      {
        "provider": "github",
        "owner": "lfgraphics",
        "repo": "bowser"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "files": [
      "**/*",
      "env.production"
    ],
    "extraResources": [
      "env.production"
    ]
  }
}